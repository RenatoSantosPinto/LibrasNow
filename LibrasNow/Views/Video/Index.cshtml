@model IEnumerable<LibrasNow.Models.Video>

@{
    ViewData["Title"] = "Vídeos";
}

<h2>Vídeos</h2>


<p>
    <a asp-action="Create">Cadastrar Vídeo</a>
</p>

<hr />

<div class="container">
    @if (TempData["Mensagem"] != null)
    {
        if (TempData["Sucesso"].Equals(true))
        {
            <div class="alert alert-success">
                @TempData["Mensagem"]
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                @TempData["Mensagem"]
            </div>
        }
    }
</div>

<div class="container">
    @foreach (var item in Model)
    {
            <a class="col-xs-12 col-sm-6 col-md-4 col-lg-4 btn btn-primary" 
               asp-action="Edit" asp-route-id="@item.CodVideo">@item.Descricao</a>
    }
</div>








