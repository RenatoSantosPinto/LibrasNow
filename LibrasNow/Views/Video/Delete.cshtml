@model LibrasNow.Models.Video

@{
    ViewData["Title"] = "Exclusão de Vídeo";
}

<h2>Excluir Vídeo</h2>

<h4>Deseja realmente excluir esse vídeo?</h4>
<hr />

<form asp-action="Delete" class="form-horizontal">   

    @if (TempData["Mensagem"] != null)
    {
        <div class="col-md-offset-2 text-danger">
            <ul><li>@TempData["Mensagem"]</li></ul>
        </div>
    }

    <table class="table table-responsive">
        <tr>
            <td style="vertical-align:middle">
                <label class="col-md-1 control-label">Descrição</label>
            </td>
            <td class="col-md-11" style="vertical-align:middle">
                <span>@Model.Descricao</span>
            </td>
        </tr>
        <tr>
            <td style="vertical-align:middle">
                <label class="col-md-1 control-label">Vídeo</label>
            </td>
            <td class="col-md-11" style="vertical-align:middle">
                <video width="320" height="240" preload="metadata" controls>
                    <source src="/Video/ShowVideo/@Model.CodVideo" type="video/webm">
                    <source src="/Video/ShowVideo/@Model.CodVideo" type="video/ogg">
                    <source src="/Video/ShowVideo/@Model.CodVideo" type="video/mp4">
                </video>
            </td>
        </tr>
    </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Excluir" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </div>
        </div>
</form>

